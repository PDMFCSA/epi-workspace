                {
                    "type": "smartClone",
                    "target": ".",
                    "commit": "a36774c624dbe360f4d2bc8e5ca653db4ecd21a9",
                    "tag": "v1.1.0",
                    "collectLog": false
                },
                {
                    "type": "execute",
                    "cmd": "echo \"manualy run cd ethadapter && npm install\""
