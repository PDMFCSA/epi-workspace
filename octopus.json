{
    "workDir": ".",
    "dependencies": [
        {
            "name": "opendsu-sdk",
            "src": "http://github.com/pdmfcsa/opendsu-sdk.git",
            "actions": [
                {
                    "type": "smartClone",
                    "target": ".",
                    "collectLog": false
                },
                {
                    "type": "execute",
                    "cmd": "cd opendsu-sdk && npm install"
                }
            ]
        },
        {
            "name": "apihub-root/lwa",
            "src": "https://github.com/${GITHUB_ORGANIZATION}/LWA.git",
            "actions": [
                {
                    "type": "smartClone",
                    "target": ".",
                    "collectLog": false
                },
                {
                    "type": "execute",
                    "cmd": "cd apihub-root/lwa && npm install"
                }
            ]
        },
        {
            "name": "gtin-resolver",
            "src": "https://github.com/${GITHUB_ORGANIZATION}/gtin-resolver.git",
            "actions": [
                {
                    "type": "smartClone",
                    "target": ".",
                    "collectLog": false
                },
                {
                    "type": "execute",
                    "cmd": "cd gtin-resolver && npm install"
                },
                {
                    "type": "execute",
                    "cmd": "cd gtin-resolver && npm run build"
                }
            ]
        },
        {
            "name": "ethadapter",
            "src": "https://github.com/pdmfcsa/eth-adapter",
            "actions": [
                {
                    "type": "smartClone",
                    "target": ".",
                    "collectLog": false
                },
                {
                    "type": "execute",
                    "cmd": "echo \"manualy run cd ethadapter && npm install\""
                },
                {
                    "type": "execute",
                    "cmd": "echo \"manualy run cd ethadapter/EthAdapter && npm install\""
                },
                {
                    "type": "execute",
                    "cmd": "echo \"manualy run cd ethadapter/SmartContracts && npm install\""
                }
            ]
        },
        {
            "name": "WebSkel",
            "src": "https://github.com/OutfinityResearch/WebSkel.git",
            "actions": [
                {
                    "type": "smartClone",
                    "target": "./apihub-root/dsu-fabric",
                    "collectLog": false
                }
            ]
        },
        {
            "name": "WebSkel",
            "src": "https://github.com/OutfinityResearch/WebSkel.git",
            "actions": [
                {
                    "type": "smartClone",
                    "target": "./apihub-root/demiurge",
                    "collectLog": false
                }
            ]
        },
        {
            "name": "configure-apihub.json",
            "actions": [
              {
                "type": "copy",
                "src": "./apihub-root/external-volume/config/apihub.json.template",
                "target": "./apihub-root/external-volume/config/apihub.json",
                "options": {
                  "overwrite": true
                }
              },
              {
                "type": "execute",
                "cmd": "[ -f .ssotokenskip ] && echo \".ssotoken file detected configuring apihub.json wiht local configs\" || echo \".ssotoken file not detected configuring apihub.json wiht environment variables\""
              },
              {
                "type": "execute",
                "cmd": "[ -f .ssotokenskip ] && sed -i -E \"s|(\\\"clientSecret\\\":\\s*)\\\"[^\\\"]*\\\"|\\1\\\"$(cat .ssotoken)\\\"|\" apihub-root/external-volume/config/apihub.json"
              },
              {
                "type": "execute",
                "cmd": "[ -f .ssotoken ] && node ./bin/configureApihubJson.js"
              }
            ]
        }
    ],
    "patch": [
        {
            "name": "trust-loader-config",
            "actions": [
                {
                    "type": "copy",
                    "src": "./trust-loader-config",
                    "target": "./apihub-root",
                    "options": {
                        "overwrite": true,
                        "ignoreErrors": true
                    }
                }
            ]
        }
    ],
    "postinstall": [
        {
            "name": "gtin-resolver-build",
            "src": "",
            "actions": [
                {
                    "type": "execute",
                    "cmd": "cd gtin-resolver && npm run build"
                }
            ]
        }
    ],
    "build": [
        {
            "name": "gtin-resolver-build",
            "src": "",
            "actions": [
                {
                    "type": "execute",
                    "cmd": "cd gtin-resolver && npm run build"
                }
            ]
        },
        {
            "name": "apps build",
            "actions": [
                {
                    "type": "execute",
                    "cmd": "node ./node_modules/octopus/scripts/setEnv --file=../../../env.json \"node ./bin/octopusRun.js buildApps\""
                }
            ]
        }
    ],
    "buildApps": [
        {
            "name": "dsu-fabric-build",
            "actions": [
                {
                    "type": "copy",
                    "src": "./opendsu-sdk/builds/output/versionLessBoot.js",
                    "target": "./apihub-root/dsu-fabric/bundles/versionLessBoot.js",
                    "options": {
                        "overwrite": true
                    }
                },
                {
                    "type": "copy",
                    "src": "./gtin-resolver/build/bundles/gtinResolver.js",
                    "target": "./apihub-root/dsu-fabric/bundles/gtinResolver.js",
                    "options": {
                        "overwrite": true
                    }
                }
            ]
        },
        {
            "name": "demiurge-build",
            "actions": [
                {
                    "type": "copy",
                    "src": "./opendsu-sdk/builds/output/versionLessBoot.js",
                    "target": "./apihub-root/demiurge/bundles/versionLessBoot.js",
                    "options": {
                        "overwrite": true
                    }
                },
                {
                    "type": "copy",
                    "src": "./gtin-resolver/build/bundles/gtinResolver.js",
                    "target": "./apihub-root/demiurge/bundles/gtinResolver.js",
                    "options": {
                        "overwrite": true
                    }
                }
            ]
        }
    ]
}
